<%= form_for [post,post.comments.new] do |f| %>
 
  <div class="form_group">
      <%= f.label "New comment" %>
      <%= f.text_area :body, rows: 4, class: 'form-control', placeholder: "Enter comment body" %>
  </div>
 <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>

<% end %>